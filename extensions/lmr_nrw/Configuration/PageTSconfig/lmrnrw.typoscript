				pt-12 = 12
				pt-13 = 13
				pt-14 = 14
				pt-15 = 15
                mt-auto = auto
            }
        }
		space_after_class {
            removeItems = extra-small,small,medium,large,extra-large
            addItems {
                pb-0 = 0
                pb-1 = 1
                pb-2 = 2
                pb-3 = 3
                pb-4 = 4
                pb-5 = 5
