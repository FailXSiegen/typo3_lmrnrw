TCEFORM {
	tt_content {
		layout {
			altLabels {
                0 = ---
				1 = Feste Breite
				2 = Volle Breite mit Innenabstand
                3 = Volle Breite ohne Innenabstand
			}
			addItems {
			    4 = Keine Ummantelung
			}
		}
		frame_class {
            label = Background
		    removeItems = ruler-before,ruler-after,indent,indent-left,indent-right
            altLabels {
                default = ---
            }
			
            addItems {
                bg-white = LLL:EXT:lmr_nrw/Resources/Private/Language/locallang_db.xlf:color.white
				bg-white.icon = EXT:lmr_nrw/Resources/Public/Icons/color-white.png
                bg-grey = LLL:EXT:lmr_nrw/Resources/Private/Language/locallang_db.xlf:color.grey
				bg-grey.icon = EXT:lmr_nrw/Resources/Public/Icons/color-grey.png
                bg-aubergine = LLL:EXT:lmr_nrw/Resources/Private/Language/locallang_db.xlf:color.aubergine
				bg-aubergine.icon = EXT:lmr_nrw/Resources/Public/Icons/color-aubergine.png
                bg-violett = LLL:EXT:lmr_nrw/Resources/Private/Language/locallang_db.xlf:color.violett
				bg-violett.icon = EXT:lmr_nrw/Resources/Public/Icons/color-violett.png
                bg-darkgreen = LLL:EXT:lmr_nrw/Resources/Private/Language/locallang_db.xlf:color.darkgreen
