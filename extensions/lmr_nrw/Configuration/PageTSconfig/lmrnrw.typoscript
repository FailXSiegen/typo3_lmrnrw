                bg-lightgreen = LLL:EXT:lmr_nrw/Resources/Private/Language/locallang_db.xlf:color.lightgreen
				bg-lightgreen.icon = EXT:lmr_nrw/Resources/Public/Icons/color-lightgreen.png
            }
			types {
				counter {
					altLabels {
						default = Standard
					}
					label = Counter-Schriftgröße
					removeItems = none,ruler-before,ruler-after,indent,indent-left,indent-right,bg-white,bg-grey,bg-aubergine,bg-violett,bg-darkgreen,bg-green,bg-lightgreen
					addItems {
						h1 = Groß
						h2 = Mittelgroß
						h3 = Mittel
						h4 = Kleiner
						h5 = Klein
						bigtext = Riesig
						bigbigtext = Wahnsinnig Groß
